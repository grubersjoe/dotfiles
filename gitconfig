[user]
    name = Jonathan Gruber

[alias]
    a  = add
    b  = branch
    c  = commit
    cc = ! git rev-parse --short=8 HEAD | tr -d '\n' | pbcopy
    co = checkout
    d  = diff
    dc = diff --cached
    f = fetch
    s  = status
    p  = pull
    pf = push --force-with-lease
    pu = push

[core]
    autocrlf = input
    excludesfile = ~/.gitignore
    pager = delta

[credential]
    helper = cache

[diff]
    colorMoved = default

[include]
    path = ~/.gitconfig.local

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[push]
    default = current
	autoSetupRemote = true

[pull]
    rebase = true

[rebase]
    autoStash = true

[delta]
    navigate = true
    side-by-side = true

[tig "color"]
    cursor = black magenta
    title-blur = black blue
    title-focus = black blue
